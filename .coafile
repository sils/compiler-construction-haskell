[Default]
# This coafile can be used with coala. You can install coala via:
#   git clone https://github.com/coala-analyzer/coala coala
#   cd coala
#   sudo python3 setup.py install
# Then run this configuration with:
#   coala

use_spaces = True
bears = SpaceConsistencyBear

[TRAVIS_WHITESPACE]
files = **/*.md, **/*.cf, **/*.sh, **/*.cc

[HASKELL]
files = **/*.sh
bears = SpaceConsistencyBear, LineLengthBear
max_line_length = 80
